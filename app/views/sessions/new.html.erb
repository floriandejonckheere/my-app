<div class="flex flex-col gap-18 py-12 w-1/3 card">
  <div class="flex flex-col gap-4 text-center">
    <%= link_to root_path, class: "text-3xl text-gray-700 dark:text-gray-100 font-montserrat", style: "letter-spacing: 0.25em;" do %>
      MY APP
    <% end %>

    <div class="text-sm">Please sign in to continue</div>
  </div>

  <%= form_for @user, url: sign_in_path, method: :post, html: { class: "flex flex-col gap-8" } do |f| %>
    <div>
      <div class="ml-1 mb-2 bold">Email</div>
      <%= f.email_field :email,
                       placeholder: "Email",
                       class: "w-full input",
                       required: true,
                       autofocus: true,
                       autocomplete: "email"
      %>
    </div>

    <div>
      <div class="ml-1 mb-2 bold">Password</div>
      <%= f.password_field :password,
                           placeholder: "Password",
                           class: "w-full input",
                           required: true,
                           autocomplete: "current-password"
      %>
    </div>

    <div>
      <%= f.submit value: "Sign in",
                   data: { turbo: false },
                   class: "w-full px-6 py-4 btn inverted"
      %>
    </div>
  <% end %>
</div>
