<div class="absolute w-full mt-4 flex justify-center">
  <% if notice %>
    <div class="p-4 bg-white dark:bg-black text-gray-700 dark:text-gray-100 text-sm rounded-md w-1/3 shadow-sm z-30">
      <%= heroicon "information-circle", options: { class: "w-4 h-4 inline" } %><%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="p-4 text-sm bg-red-100 dark:bg-red-700 text-red-700 dark:text-red-100 rounded-md w-1/3 shadow-sm z-30">
      <%= heroicon "exclamation", options: { class: "w-4 h-4 inline" } %><%= alert %>
    </div>
  <% end %>
</div>
